<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/rootView"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="fill_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetEnd="0.0dip"
            app:contentInsetLeft="0.0dip"
            app:contentInsetRight="0.0dip"
            app:contentInsetStart="0.0dip"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@id/imgBack"
                    android:padding="5.0dip"
                    android:layout_width="36.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:src="?homeAsUpIndicator"
                    android:adjustViewBounds="true" />

                <TextView
                    android:textSize="18.0sp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center"
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join Tournament" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="12.0sp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance" />

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ff333333"
                    android:gravity="center"
                    android:id="@+id/txtBalance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="--" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="12.0sp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Entry Fees" />

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ff333333"
                    android:gravity="center"
                    android:id="@+id/txtFees"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="--" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="12.0sp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Remaining Balance" />

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ff333333"
                    android:gravity="center"
                    android:id="@+id/txtRemaining"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="--" />

            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/joinCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            app:cardCornerRadius="8.0dip">

            <TextView
                android:textSize="16.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/red"
                android:paddingLeft="36.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="36.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN NOW" />

        </android.support.v7.widget.CardView>
        <TextView
            android:textSize="12.0sp"
            android:textStyle="bold"
            android:textColor="#ff999999"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/txtCancel"
            android:paddingLeft="24.0dip"
            android:paddingTop="12.0dip"
            android:paddingRight="24.0dip"
            android:paddingBottom="8.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:text="press back to cancel" />

    </LinearLayout>
</LinearLayout>