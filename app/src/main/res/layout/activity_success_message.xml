<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100sp"
            android:background="@drawable/ic_payment_success"
            android:layout_height="100sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:text="You have Successfully joined the match"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="We will send you room ID and password before 15 min of match starting"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="8.0dip"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="4.0dip"
            app:cardUseCompatPadding="true">

            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@color/red"
                android:paddingLeft="64.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="64.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return to Home" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>