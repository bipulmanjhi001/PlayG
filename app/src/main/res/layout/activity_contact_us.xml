<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageView
                    android:id="@+id/back_historyss"
                    android:layout_width="wrap_content"
                    android:translationZ="4sp"
                    android:background="@drawable/ic_back"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="Contact us"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="40sp"
            android:layout_marginRight="40sp"
            android:layout_marginBottom="10sp"
            app:cardCornerRadius="30sp"
            android:translationZ="8sp"
            android:layout_height="wrap_content">
            
            <EditText
                android:id="@+id/title_contact"
                android:layout_width="match_parent"
                android:hint="Title here"
                android:layout_margin="30sp"
                android:textSize="14sp"
                android:lines="1"
                android:layout_height="wrap_content"/>

            
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            app:cardCornerRadius="30sp"
            android:translationZ="8sp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/message_contact"
                android:layout_width="match_parent"
                android:hint="Write your message here"
                android:layout_margin="30sp"
                android:layout_gravity="center"
                android:gravity="top"
                android:lines="4"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="8.0dip"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="4.0dip"
            app:cardUseCompatPadding="true">

            <TextView
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@color/red"
                android:paddingLeft="64.0dip"
                android:paddingTop="8.0dip"
                android:paddingRight="64.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>