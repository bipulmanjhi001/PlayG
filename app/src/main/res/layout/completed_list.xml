<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    sweet:cardCornerRadius="5dp"
    android:background="#FFFFFF"
    sweet:cardPreventCornerOverlap="false"
    sweet:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/rootView"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTournamentImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:maxHeight="140dp"/>

        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgMapType"
                android:layout_width="56dp"
                android:src="@drawable/ic_launcher_list"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <TextView
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#777"
                    android:id="@+id/txtMatchNo"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WIN PRIZE"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtChikenDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PER KILL"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtPerKill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTRY FEE"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtEntryFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TYPE"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:id="@+id/id"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VERSION"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:textSize="10sp"
                    android:textColor="@color/colorTextBlackHalf"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MAP"/>

                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center"
                    android:id="@+id/txtMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_primary_strok"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="COMPLETED"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
